---
export interface SectionTitleProps {
  center?: boolean;
}

interface Props extends SectionTitleProps {}

const props = Astro.props;
---

<div
  class:list={[
    "w-full pb-8 max-w-3xl",
    {
      "text-center mx-auto": props.center,
    },
  ]}
>
  <p class="mb-2 text-primary">
    <slot name="subtitle" />
  </p>
  <h3 class="text-4xl font-bold leading-[1.2] pb-6">
    <slot />
  </h3>
  <p class="pb-6">
    <slot name="description" />
  </p>
</div>
